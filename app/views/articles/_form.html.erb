<%= render 'shared/errors', obj: @article %>

<div class="container">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
        <%= f.label :title, class: "label" %>
        <%= f.text_field :title, class: "form-control", placeholder: "Article Title", autofocus: true %>
    </div>
    <div class="form-group">
        <%= f.label :description, class: "description" %>
        <%= f.text_area :description, class: "form-control", placeholder: "Article Description", autofocus: true, rows: 7 %>
    </div>
    <div class="form-group">
        <%= f.submit  class: "btn btn-primary btn-lg" %>
    </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
        [
        <%= link_to "Cancel Request and Go Back", articles_path %>]
    </div>
</div>